<div class="display_animal_form" style="margin-top: 3.5em;">
    <div class="animal_div">
        <!--card-header -->
        <div class="card-header">
            <h1 class="text-center">Please Enter Animal Information</h1>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <div class="container">
            <form role="form">
                <div class="card-body">
                    <div class="form-group">
                        <label>Animal ID</label>
                        <input type="text" class="form-control" placeholder="Animal ID">
                    </div>
                    <div class="form-group">
                        <label>Animal Type</label>
                        <input type="text" class="form-control" placeholder="Animal Type">
                    </div>
                    <div class="form-group">
                        <label>Animal Gender</label><br>
                        <select>
                            <option value="male">male</option>
                            <option value="female">female</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Animal Kind</label>
                        <input type="text" class="form-control" placeholder="Animal Kind">
                    </div>
                    <div class="form-group">
                        <label>Animal Color</label>
                        <input type="text" class="form-control" placeholder="Animal Color">
                    </div>
                    <div class="form-group">
                        <label>Animal Age</label>
                        <input type="text" class="form-control" placeholder="Animal Age">
                    </div>
                    <div class="form-group">
                        <label>Location</label>
                        <input type="text" class="form-control" placeholder="London">
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <input type="text" class="form-control" placeholder="Adopted">
                    </div>
                    <div class="form-group">
                        <label>Vaccine</label>
                        <input type="text" class="form-control" placeholder="No">
                    </div>
                    <div class="form-group">
                        <label>Animal Description</label>
                        <textarea class="form-control" rows="5" id="description"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Image Upload</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="exampleInputFile">
                                <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text" id="">Upload</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
